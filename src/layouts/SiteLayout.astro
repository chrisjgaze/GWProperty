---
import "../styles/app.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Browse Dubai off-plan projects, communities, and developer insights.",
} = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
  </head>

  <body class="site">
    <header class="site-header">
      <div class="nav-shell">
        <a class="brand brand-link" href="/">
          <div class="brand-mark">DD</div>
          <div>
            <div class="brand-name">Dubai Dream Off-Plan</div>
            <div class="brand-sub">dubaidreamoffplan.com</div>
          </div>
        </a>

        <nav class="nav-links">
          <a href="/">Projects</a>
          <a href="/developers">Developers</a>
          <a href="/communities">Communities</a>
          <a href="/guides">Guides</a>
          <a href="/contact">Contact Us</a>
        </nav>

        <div class="nav-cta">
          <a class="btn btn-dark" href="/contact">Get Insider Access</a>
        </div>
      </div>
    </header>

    <slot />

    <footer class="site-footer">
      <div class="footer-inner">
        <div>
          <div class="footer-title">Dubai Dream Off-Plan</div>
          <div class="footer-sub">+971 56 244 5357</div>
          <div class="footer-sub">sales@dubaidreamoffplan.com</div>
        </div>
        <div>
          <div class="footer-title">Popular Communities</div>
          <div class="footer-link">Dubai Hills Estate</div>
          <div class="footer-link">Downtown Dubai</div>
          <div class="footer-link">Emaar Beachfront</div>
          <div class="footer-link">Dubai Creek Harbour</div>
        </div>
        <div>
          <div class="footer-title">Useful Links</div>
          <a class="footer-link" href="/guides">Buying guide</a>
          <a class="footer-link" href="/guides">Investor FAQ</a>
          <a class="footer-link" href="/contact">Contact us</a>
          <div class="footer-link">Privacy policy</div>
        </div>
      </div>
      <div class="footer-bottom">&copy; 2026 Dubai Dream Off-Plan. All rights reserved.</div>
    </footer>

    <a
      class="whatsapp-float"
      href="https://wa.me/971562445357"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Chat on WhatsApp"
    >
      <svg viewBox="0 0 32 32" aria-hidden="true">
        <path
          d="M16.02 3.2a12.56 12.56 0 0 0-10.9 18.8L3.5 28.8l7.02-1.58a12.54 12.54 0 1 0 5.5-24.02Zm0 22.78c-1.9 0-3.76-.5-5.4-1.44l-.38-.22-4.18.95.9-4.07-.24-.4a10.3 10.3 0 1 1 9.3 5.18Zm5.64-7.73c-.31-.15-1.84-.9-2.12-1s-.49-.15-.7.16-.8 1-.98 1.2-.36.23-.67.08a8.43 8.43 0 0 1-2.48-1.53 9.25 9.25 0 0 1-1.72-2.14c-.18-.31-.02-.48.13-.63.14-.14.31-.36.47-.54.16-.18.2-.31.31-.52s.05-.39-.03-.54c-.08-.15-.7-1.67-.95-2.29-.25-.6-.5-.52-.7-.53h-.6c-.2 0-.53.08-.8.39-.28.31-1.07 1.04-1.07 2.54s1.1 2.95 1.25 3.15c.15.2 2.16 3.3 5.23 4.63.73.31 1.3.5 1.75.64.74.24 1.41.2 1.94.12.59-.09 1.84-.75 2.1-1.48.26-.73.26-1.36.18-1.48-.08-.12-.28-.2-.59-.35Z"
